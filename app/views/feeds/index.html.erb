
<p id="notice"><%= notice %></p>
<%= flash[:warning] %>

<h1 class = "header">Feeds</h1>

<table align = "center">
  <thead>
    <tr>
      <th>Image</th>
      <th>コメント</th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td class = "image"><%= image_tag feed.image.url %></td>
        <td><%= feed.content %></td>
        <td><%= feed.user.name %></td>
        <td><%= link_to 'Show', feed %></td>
        <% if feed.user == current_user %>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<footer>
<%= link_to 'New Feed', new_feed_path %>
</footer>